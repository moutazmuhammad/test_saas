<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View (dialog) -->
    <record id="saas_ssh_key_pair_view_form" model="ir.ui.view">
        <field name="name">saas.ssh.key.pair.form</field>
        <field name="model">saas.ssh.key.pair</field>
        <field name="arch" type="xml">
            <form string="SSH Key Pair">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. my-key"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="private_key_filename"/>
                            <field name="private_key_file" filename="private_key_file_name"/>
                            <field name="private_key_file_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="saas_ssh_key_pair_view_list" model="ir.ui.view">
        <field name="name">saas.ssh.key.pair.list</field>
        <field name="model">saas.ssh.key.pair</field>
        <field name="arch" type="xml">
            <list string="SSH Key Pairs">
                <field name="name"/>
                <field name="private_key_filename"/>
                <field name="type"/>
            </list>
        </field>
    </record>

</odoo>
