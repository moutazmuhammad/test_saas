<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Kanban View -->
    <record id="saas_odoo_product_view_kanban" model="ir.ui.view">
        <field name="name">saas.odoo.product.kanban</field>
        <field name="model">saas.odoo.product</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="module_count"/>
                <field name="description"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="card" class="flex-row">
                        <aside>
                            <field name="image_128" widget="image"/>
                        </aside>
                        <main>
                            <field name="name" class="fw-bold fs-5"/>
                            <field name="odoo_version_id"/>
                            <span class="text-muted">
                                <field name="module_count"/> modules
                            </span>
                            <field name="description" class="text-muted"/>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="saas_odoo_product_view_form" model="ir.ui.view">
        <field name="name">saas.odoo.product.form</field>
        <field name="model">saas.odoo.product</field>
        <field name="arch" type="xml">
            <form string="Module Product">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Product Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="odoo_version_id"/>
                        </group>
                        <group>
                            <field name="module_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"
                                   placeholder="Describe what this product bundle provides..."/>
                        </page>
                        <page string="Modules">
                            <field name="module_ids" nolabel="1"
                                   domain="[('odoo_version_id', '=', odoo_version_id)]">
                                <list>
                                    <field name="image_128" widget="image"
                                           options="{'size': [32, 32]}" string=""/>
                                    <field name="name"/>
                                    <field name="technical_name"/>
                                    <field name="summary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="saas_odoo_product_view_list" model="ir.ui.view">
        <field name="name">saas.odoo.product.list</field>
        <field name="model">saas.odoo.product</field>
        <field name="arch" type="xml">
            <list string="Module Products">
                <field name="image_128" widget="image"
                       options="{'size': [32, 32]}" string=""/>
                <field name="name"/>
                <field name="odoo_version_id"/>
                <field name="module_count"/>
                <field name="module_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="saas_odoo_product_action" model="ir.actions.act_window">
        <field name="name">Module Products</field>
        <field name="res_model">saas.odoo.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first module product bundle
            </p>
        </field>
    </record>

</odoo>
