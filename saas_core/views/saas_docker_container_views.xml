<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View (used inside one2many) -->
    <record id="saas_docker_container_view_list" model="ir.ui.view">
        <field name="name">saas.docker.container.list</field>
        <field name="model">saas.docker.container</field>
        <field name="arch" type="xml">
            <list string="Docker Containers" create="false" edit="false" delete="false">
                <field name="container_id"/>
                <field name="name"/>
                <field name="image"/>
                <field name="command"/>
                <field name="created"/>
                <field name="status"/>
                <field name="ports"/>
                <button name="action_stop_container"
                        string="Stop"
                        type="object"
                        icon="fa-stop"
                        class="btn-link text-danger"
                        confirm="Are you sure you want to stop this container?"/>
                <button name="action_restart_container"
                        string="Restart"
                        type="object"
                        icon="fa-refresh"
                        class="btn-link text-warning"/>
            </list>
        </field>
    </record>

</odoo>
