<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="saas_odoo_version_view_form" model="ir.ui.view">
        <field name="name">saas.odoo.version.form</field>
        <field name="model">saas.odoo.version</field>
        <field name="arch" type="xml">
            <form string="Odoo Version">
                <header>
                    <button name="action_fetch_modules"
                            string="Fetch Modules &amp; Icons"
                            type="object"
                            class="oe_highlight"
                            icon="fa-download"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_fetch_modules" icon="fa-cubes">
                            <field name="module_count" string="Modules"
                                   widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="docker_image"/>
                            <field name="docker_image_tag"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Available Modules">
                            <field name="module_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="image_128" widget="image"
                                           options="{'size': [32, 32]}" string=""/>
                                    <field name="technical_name"/>
                                    <field name="name"/>
                                    <field name="saas_author" optional="show"/>
                                    <field name="description_sale" string="Summary" optional="show"/>
                                    <field name="saas_dependency_ids" widget="many2many_tags"
                                           domain="[('saas_type', '=', 'module'), ('saas_odoo_version_id', '=', parent.id)]"/>
                                </list>
                            </field>
                        </page>
                        <page string="Bundles">
                            <field name="product_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="image_128" widget="image"
                                           options="{'size': [32, 32]}" string=""/>
                                    <field name="name"/>
                                    <field name="description_sale" string="Description" optional="show"/>
                                    <field name="saas_module_ids" widget="many2many_tags"
                                           domain="[('saas_type', '=', 'module'), ('saas_odoo_version_id', '=', parent.id)]"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="saas_odoo_version_view_list" model="ir.ui.view">
        <field name="name">saas.odoo.version.list</field>
        <field name="model">saas.odoo.version</field>
        <field name="arch" type="xml">
            <list string="Odoo Versions">
                <field name="name"/>
                <field name="docker_image"/>
                <field name="docker_image_tag"/>
                <field name="module_count"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="saas_odoo_version_action" model="ir.actions.act_window">
        <field name="name">Odoo Version</field>
        <field name="res_model">saas.odoo.version</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Odoo version
            </p>
        </field>
    </record>

</odoo>
